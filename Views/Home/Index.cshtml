@{
    ViewData["Title"] = "Register";
}
@model User
<div class="container">
    <div class="jumbotron row justify-content-between">
        <h1>Register to this Cool Site!</h1>
        <a href="/login">Login</a>
    </div>
    <div class="row">
        <form action="/create" method="post" class="row w-100">
            <div class="d-flex flex-column col-6">
                <label asp-for="FirstName"></label>            
                <span asp-validation-for="FirstName" class="text-danger"></span>
                <input asp-for="FirstName">
                <label asp-for="LastName"></label>            
                <span asp-validation-for="LastName" class="text-danger"></span>
                <input asp-for="LastName">
                <label asp-for="Email"></label>            
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Email">
                <button class="btn btn-primary mt-3 w-fit">Sign up Now</button>
            </div>
            <div class="d-flex flex-column col-6">
                <label asp-for="Password"></label>            
                <span asp-validation-for="Password" class="text-danger"></span>
                <input asp-for="Password">
                <label asp-for="CfPassword"></label>            
                <span asp-validation-for="CfPassword" class="text-danger"></span>
                <input asp-for="CfPassword">
            </div>
        </form>
    </div>
</div>
